{
    "extends": ["eslint:recommended", "google"],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": ["error", "as-needed", {
            "requireForBlockBody":true
        }],
        "comma-dangle": ["error", "never"],
        "camelcase":["off"],
        "max-len": "off",
        "new-cap": ["warn", {
            "capIsNew": false
        }],
        "no-console": "off",
        "no-throw-literal": "warn",
        "one-var": ["error", {
            "initialized": "never"
        }],
        "prefer-arrow-callback": "error",
        "prefer-const": "error",
        "require-jsdoc": "off",
        "semi": "error",
        "valid-jsdoc": "warn",
        "indent": ["error", 2],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    }
}